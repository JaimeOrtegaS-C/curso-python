#1.5 funciones-2
def informacion(nombre, puesto = 'desconocido'):
    print(f'Soy {nombre} y soy {puesto}')

informacion('Jaime', 'Programador')
informacion('Itzel', 'Diseñadora')
informacion('Caguau', 'Programador')
informacion('Tuit')

#1.6 Funciones-3
