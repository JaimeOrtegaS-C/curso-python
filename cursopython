#2.0 numeros-1
def suma():
    print(2 + 2)

suma()

def suma(a = 0,  b = 0, c = 0):
    print(a + b + c)

suma(2, 3, 6)

def resta(a, b):
    print(a - b)

resta( 10, 8)

